



/#include <avr/interrupt.h>
    //4. tambahkan interrupsi service rutin sebagai berikut:
ISR(ADC_vect)
{
   // Code to be executed when ISR fires
  dataADC=ADCH;
  PORTA=~dataADC;  //barled aktif low
}
